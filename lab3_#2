#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int n, r, temp, sum=0;
    scanf("%d", &n);
    temp = n;
    while(n>0){
        r=n%10;
        sum= (sum*10)+r;
        n/=10;
    }
    if(temp==sum){
        printf("YES");
    }
    else{
        printf("NO");
    }
    return 0;
}
